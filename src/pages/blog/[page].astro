---
import type { GetStaticPaths } from "astro";
import MainLayout from "@layouts/MainLayout.astro";
import { getCollection } from "astro:content";
import TypedBlogPost from "@/components/BlogPost/TypedBlogPost.astro";

export const getStaticPaths = (async ({ paginate }) => {
  const posts = await getCollection("blog", (post) => post.data.isDraft === false); // Filter out draft posts

  return paginate(posts, { pageSize: 4 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---

<MainLayout title="Blog Paginado" description="Blog paginado con Astro">
  <div class="py-10 mx-auto">
    <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">
      Fernando's Blog paginado
    </h1>
  </div>

  <section class="bg-gray-900" aria-label="Entradas de blog">
    <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
      {page.data.map((post) => <TypedBlogPost post={post} />)}
    </div>
  </section>

  <section aria-label="Controles" class="flex justify-between mt-10">
    <!--   page .. ?? prev   -->
    <a
      href={page.url.prev}
      class:list={{
        disabled: !page.url.prev,
      }}>Anteriores</a
    >

    <!--   page .. ?? next   -->
    <a
      href={page.url.next}
      class:list={{
        disabled: !page.url.next,
      }}>Siguientes</a
    >
  </section>
</MainLayout>
