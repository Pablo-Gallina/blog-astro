---
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";

interface Props {
  title: string;
  image?: string;
  description?: string;
  frontmatter?: Record<string, any>;
}
const { title, description, image, frontmatter } = Astro.props;

const {
  title: frontmatterTitle = title,
  description: frontmatterDescription = description,
  image: frontmatterImage = image,
} = frontmatter || {};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <meta
      name="description"
      content={description ||
        "Explore the Marvel Universe with our comprehensive character database."}
    />
    <meta
      name="keywords"
      content="Marvel, Characters, Database, Comics, Superheroes"
    />

    <!-- OG Metatags -->
    <meta property="og:title" content={frontmatterTitle || title} />
    <meta
      property="og:description"
      content={description ||
        "Explore the Marvel Universe with our comprehensive character database."}
    />
    <meta property="og:image" content={image || "/default-image.jpg"} />

    <title>{frontmatterTitle || title}</title>
    <ClientRouter />
  </head>
  <body class="relative">
    <main class="m-auto max-w-3xl py-6 px-4 relative z-10">
      <slot />
    </main>
  </body>
</html>
